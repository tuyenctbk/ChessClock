<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <TextClock
            android:id="@+id/tClockA"
            android:text="Clock A"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:rotation="180"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <View android:layout_width="wrap_content" android:layout_height="1dp"
              android:layout_weight="1"></View>
        <ImageView
                android:id="@+id/btnSetting"
                android:src="@android:drawable/ic_btn_speak_now"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/btnPause"
                android:src="@android:drawable/ic_btn_speak_now"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:layout_height="wrap_content"/>


        <ImageView
                android:id="@+id/btnStartOver"
                android:src="@android:drawable/ic_btn_speak_now"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:layout_height="wrap_content"/>

        <View android:layout_width="wrap_content" android:layout_height="1dp"
              android:layout_weight="1"></View>
    </LinearLayout>

    <TextClock
            android:id="@+id/tClockB"
            android:text="Clock B"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>